<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/purple_theme2"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/image_register"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/register" />


            <LinearLayout
                android:id='@+id/linear_info'
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_register"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:fontFamily="@font/montaguslab"
                    android:textColor="#3F60A0"
                    android:text="Full name"
                    android:textSize="16sp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_inputype">

                    <EditText
                        android:id="@+id/name"
                        android:layout_width="265dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@null" />

                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montaguslab"
                    android:textColor="#3F60A0"
                    android:text="Email"
                    android:textSize="16sp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_inputype">

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="265dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@null" />

                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:fontFamily="@font/montaguslab"
                    android:layout_marginTop="10dp"
                    android:textColor="#3F60A0"
                    android:text="Username"
                    android:textSize="16sp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_inputype">

                    <EditText
                        android:id="@+id/username"
                        android:layout_width="265dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@null" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:fontFamily="@font/montaguslab"
                    android:layout_marginTop="10dp"
                    android:textColor="#3F60A0"
                    android:text="Phone number"
                    android:textSize="16sp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_inputype">

                    <EditText
                        android:id="@+id/Phone"
                        android:layout_width="265dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@null"
                        android:inputType="phone" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:fontFamily="@font/montaguslab"
                    android:layout_marginTop="10dp"
                    android:textColor="#3F60A0"
                    android:text="Password"
                    android:textSize="16sp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:background="@drawable/round_inputype">

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="230dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:background="@null"
                        android:inputType="textPassword" />

                    <ImageView
                        android:id="@+id/password_eye1"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginEnd="10dp"
                        android:src="@mipmap/eye_close"
                        android:layout_marginTop="5dp"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:fontFamily="@font/montaguslab"
                    android:text="Confirm password"
                    android:textColor="#3F60A0"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/round_inputype">

                    <EditText
                        android:id="@+id/confirm_password"
                        android:layout_width="230dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:background="@null"
                        android:inputType="textPassword" />
                    <ImageView
                        android:id="@+id/password_eye2"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginEnd="10dp"
                        android:src="@mipmap/eye_close"
                        android:layout_marginTop="5dp"/>

                </LinearLayout>


            </LinearLayout>


            <CheckBox
                android:id="@+id/agreement_cb"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/linear_info"
                android:layout_marginStart="60dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_info"
                android:layout_marginStart="10dp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/montaguslab"
                android:layout_toRightOf="@+id/agreement_cb"
                android:text="I Agree with privacy and policy"
                android:textColor="#3F60A0" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/registered"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/agreement_cb"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/circle_btn"
                android:text="Register"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:fontFamily="@font/inter" />

            <TextView
                android:id="@+id/already_haveAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/registered"
                android:layout_marginStart="40dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/montaguslab"
                android:text="Already have an account?"
                android:textColor="#3F60A0" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/registered"
                android:layout_toRightOf="@+id/already_haveAccount"
                android:layout_marginBottom="100dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/circle_btn"
                android:text="@string/login"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:fontFamily="@font/inter" />
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>


