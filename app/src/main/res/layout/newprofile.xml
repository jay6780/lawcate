<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffe9ef">

    <include
        android:id="@+id/header"
        layout="@layout/profileheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/myAvatar"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:src="@drawable/baseline_person_24" />

        <TextView
            android:id="@+id/usernametv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/myAvatar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/inter"
            android:text="Username"
            android:textColor="#9b5a64"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/useremailtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/usernametv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/inter"
            android:text="Email"
            android:textColor="#9b5a64"
            android:textSize="15sp"
            android:textStyle="normal" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/updatebtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/useremailtv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/borderbtn"
            android:text="Update"
            android:textColor="#9b5a64"
            android:textSize="15sp"
            android:textStyle="normal" />


        <RelativeLayout
            android:id="@+id/privacy"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_below="@+id/updatebtn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/borderbtn">


            <ImageView
                android:id="@+id/lock"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/lock33" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/lock"
                android:fontFamily="@font/inter"
                android:text="Privacy"
                android:textColor="#9b5a64"
                android:textSize="15sp"
                android:textStyle="normal" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/arrowforward" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/booking"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_below="@+id/privacy"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/borderbtn">


            <ImageView
                android:id="@+id/calendaricon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/calendarred" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/calendaricon"
                android:fontFamily="@font/inter"
                android:text="Booking"
                android:textColor="#9b5a64"
                android:textSize="15sp"
                android:textStyle="normal" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/arrowforward" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/bookingHistory"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_below="@+id/booking"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/borderbtn">


            <ImageView
                android:id="@+id/historyicon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/history" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/historyicon"
                android:fontFamily="@font/inter"
                android:text="Booking History"
                android:textColor="#9b5a64"
                android:textSize="15sp"
                android:textStyle="normal" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/arrowforward" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/helpandsupport"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_below="@+id/bookingHistory"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/borderbtn">


            <ImageView
                android:id="@+id/helpandsupporticon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/contactsupport" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/helpandsupporticon"
                android:fontFamily="@font/inter"
                android:text="Help and Support"
                android:textColor="#9b5a64"
                android:textSize="15sp"
                android:textStyle="normal" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/arrowforward" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/settings"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_below="@+id/helpandsupport"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/borderbtn">


            <ImageView
                android:id="@+id/settingsicon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/settings" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/settingsicon"
                android:fontFamily="@font/inter"
                android:text="Settings"
                android:textColor="#9b5a64"
                android:textSize="15sp"
                android:textStyle="normal" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/arrowforward" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/logout"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_below="@+id/settings"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/borderbtn">


            <ImageView
                android:id="@+id/logoutIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/logout_maroon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/logoutIcon"
                android:fontFamily="@font/inter"
                android:text="Logout"
                android:textColor="#9b5a64"
                android:textSize="15sp"
                android:textStyle="normal" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/arrowforward" />

        </RelativeLayout>



    </RelativeLayout>



</LinearLayout>