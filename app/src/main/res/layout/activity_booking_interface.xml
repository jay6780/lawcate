<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brown">

    <include
        android:id="@+id/mapheader"
        layout="@layout/mapheader3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/mapheader">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/bulb"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:src="@mipmap/lightbulb" />

            <TextView
                android:id="@+id/bookfor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bulb"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/inter"
                android:text="BOOK FOR A SERVICE"
                android:textColor="@color/bgColor"
                android:textSize="20sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/bookfor"
                android:layout_marginTop="50dp">


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn1"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/bgbtn" />

                <TextView
                    android:id="@+id/hmua"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="40dp"
                    android:layout_toEndOf="@+id/btn1"
                    android:fontFamily="@font/inter"
                    android:text="HMUA"
                    android:textColor="@color/bgColor"
                    android:textSize="35dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/event"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_below="@+id/hmua"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="70dp"
                    android:background="@drawable/bgbtn" />

                <TextView
                    android:id="@+id/eventTexgt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/hmua"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="60dp"
                    android:layout_toEndOf="@+id/event"
                    android:fontFamily="@font/inter"
                    android:text="Event"
                    android:textColor="@color/bgColor"
                    android:textSize="35dp" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/bundle"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_below="@+id/event"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="70dp"
                    android:background="@drawable/bgbtn" />

                <TextView
                    android:id="@+id/bundlebookingTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/event"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="60dp"
                    android:layout_toEndOf="@+id/btn1"
                    android:fontFamily="@font/inter"
                    android:text="Bundle Booking"
                    android:textColor="@color/bgColor"
                    android:textSize="35dp" />
            </RelativeLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>