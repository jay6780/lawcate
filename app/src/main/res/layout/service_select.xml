<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <include layout="@layout/service_header"/>
    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/l1"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="60dp">

            <RadioButton
                android:id="@+id/light_makeup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Light Makeup"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="5dp"
                android:src="@mipmap/imgesample1" />
        </RelativeLayout>
        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_below="@+id/l1"
            android:layout_height="2dp"/>
        <RelativeLayout
            android:id="@+id/l2"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/view1"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="60dp">

            <RadioButton
                android:id="@+id/smokey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Smokey-eye Makeup"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="5dp"
                android:src="@mipmap/imagesample3" />
        </RelativeLayout>
        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_below="@+id/l2"
            android:layout_height="2dp"/>

        <RelativeLayout
            android:id="@+id/l3"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@+id/view2"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/weeding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wedding makeup"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="5dp"
                android:src="@mipmap/imagesample4" />
        </RelativeLayout>
        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_below="@+id/l3"
            android:layout_height="2dp"/>
        <RelativeLayout
            android:id="@+id/l4"
            android:layout_below="@+id/view3"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="60dp">

            <RadioButton
                android:id="@+id/graduation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Graduation light makeup look"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="5dp"
                android:src="@mipmap/imagesample7" />
        </RelativeLayout>

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_below="@+id/l4"
            android:layout_height="2dp"/>
    </RelativeLayout>
    <include layout="@layout/savedfooter"/>
</LinearLayout>