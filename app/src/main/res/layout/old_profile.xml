<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_top"
            android:orientation="vertical">

            <include
                layout="@layout/user_profile"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_top3">

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp">

                        <RelativeLayout
                            android:id="@+id/updatebtn"
                            android:layout_width="280dp"
                            android:layout_height="45dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="30dp">


                            <ImageView
                                android:id="@+id/pencil"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="7dp"
                                android:src="@mipmap/pencil_pink" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="40dp"
                                android:layout_marginTop="10dp"
                                android:layout_toRightOf="@+id/pencil"
                                android:fontFamily="@font/inter"
                                android:text="@string/updateprofile"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:textStyle="normal" />


                        </RelativeLayout>

                        <View
                            android:id="@+id/view1"
                            android:layout_width="300dp"
                            android:layout_height="2dp"
                            android:layout_below="@+id/updatebtn"
                            android:layout_centerHorizontal="true"
                            android:background="#A6AEBF" />

                        <RelativeLayout
                            android:id="@+id/privacy"
                            android:layout_width="280dp"
                            android:layout_height="45dp"
                            android:layout_below="@+id/view1"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp">


                            <ImageView
                                android:id="@+id/lock"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="7dp"
                                android:src="@mipmap/padlock_pink" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="40dp"
                                android:layout_marginTop="10dp"
                                android:layout_toRightOf="@+id/lock"
                                android:fontFamily="@font/inter"
                                android:text="@string/privacy"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:textStyle="normal" />
                        </RelativeLayout>

                        <View
                            android:id="@+id/view2"
                            android:layout_width="300dp"
                            android:layout_height="2dp"
                            android:layout_below="@+id/privacy"
                            android:layout_centerHorizontal="true"
                            android:background="#A6AEBF" />

                        <RelativeLayout
                            android:id="@+id/booking"
                            android:layout_width="280dp"
                            android:layout_height="45dp"
                            android:layout_below="@+id/view2"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp">


                            <ImageView
                                android:id="@+id/calendaricon"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="7dp"
                                android:src="@mipmap/calendar_pink" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="40dp"
                                android:layout_marginTop="10dp"
                                android:layout_toRightOf="@+id/calendaricon"
                                android:fontFamily="@font/inter"
                                android:text="@string/booking"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:textStyle="normal" />

                        </RelativeLayout>

                        <View
                            android:id="@+id/view3"
                            android:layout_width="300dp"
                            android:layout_height="2dp"
                            android:layout_below="@+id/booking"
                            android:layout_centerHorizontal="true"
                            android:background="#A6AEBF" />

                        <RelativeLayout
                            android:id="@+id/bookingHistory"
                            android:layout_width="280dp"
                            android:layout_height="45dp"
                            android:layout_below="@+id/view3"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp">


                            <ImageView
                                android:id="@+id/historyicon"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="7dp"
                                android:src="@mipmap/history_pink" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="40dp"
                                android:layout_marginTop="10dp"
                                android:layout_toRightOf="@+id/historyicon"
                                android:fontFamily="@font/inter"
                                android:text="@string/historybook"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:textStyle="normal" />

                        </RelativeLayout>


                        <View
                            android:id="@+id/view4"
                            android:layout_width="300dp"
                            android:layout_height="2dp"
                            android:layout_below="@+id/bookingHistory"
                            android:layout_centerHorizontal="true"
                            android:background="#A6AEBF" />

                        <RelativeLayout
                            android:id="@+id/helpandsupport"
                            android:layout_width="280dp"
                            android:layout_height="45dp"
                            android:layout_below="@+id/view4"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp">


                            <ImageView
                                android:id="@+id/helpandsupporticon"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="7dp"
                                android:src="@mipmap/help_pink" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="40dp"
                                android:layout_marginTop="10dp"
                                android:layout_toRightOf="@+id/helpandsupporticon"
                                android:fontFamily="@font/inter"
                                android:text="@string/help"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:textStyle="normal" />

                        </RelativeLayout>

                        <View
                            android:id="@+id/view5"
                            android:layout_width="300dp"
                            android:layout_height="2dp"
                            android:layout_below="@+id/helpandsupport"
                            android:layout_centerHorizontal="true"
                            android:background="#A6AEBF" />

                        <RelativeLayout
                            android:id="@+id/settings"
                            android:layout_width="280dp"
                            android:layout_height="45dp"
                            android:layout_below="@+id/view5"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp">


                            <ImageView
                                android:id="@+id/settingsicon"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="7dp"
                                android:src="@mipmap/setting_pink" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="40dp"
                                android:layout_marginTop="10dp"
                                android:layout_toRightOf="@+id/settingsicon"
                                android:fontFamily="@font/inter"
                                android:text="@string/settings"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:textStyle="normal" />

                        </RelativeLayout>

                        <View
                            android:id="@+id/view6"
                            android:layout_width="300dp"
                            android:layout_height="2dp"
                            android:layout_below="@+id/settings"
                            android:layout_centerHorizontal="true"
                            android:background="#A6AEBF" />

                        <RelativeLayout
                            android:id="@+id/logout"
                            android:layout_width="280dp"
                            android:layout_height="45dp"
                            android:layout_below="@+id/view6"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp">


                            <ImageView
                                android:id="@+id/logoutIcon"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="7dp"
                                android:src="@mipmap/logout_pinkish" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="40dp"
                                android:layout_marginTop="10dp"
                                android:layout_toRightOf="@+id/logoutIcon"
                                android:fontFamily="@font/inter"
                                android:text="@string/logout"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:textStyle="normal" />

                        </RelativeLayout>

                        <View
                            android:id="@+id/view7"
                            android:layout_width="300dp"
                            android:layout_height="2dp"
                            android:layout_below="@+id/logout"
                            android:layout_centerHorizontal="true"
                            android:background="#A6AEBF" />


                    </RelativeLayout>
                </androidx.core.widget.NestedScrollView>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>