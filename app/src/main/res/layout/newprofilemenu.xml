<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/newhome"
    android:layout_width="match_parent"
    android:background="@color/white2"
    android:layout_height="60dp">

    <ImageView
        android:id="@+id/back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:src="@mipmap/scissors_black"
        android:visibility="visible" />

    <TextView
        android:id="@+id/profiletxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/inter"
        android:text="Makeup Artist Details"
        android:textColor="@color/black"
        android:textSize="20sp" />


    <ImageView
        android:id="@+id/bell"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/messageImg"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:src="@mipmap/bell_new" />

    <TextView
        android:id="@+id/badge_count"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginRight="11dp"
        android:layout_toLeftOf="@+id/messageImg"
        android:background="@drawable/badge"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/inter"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:visibility="visible" />


    <ImageView
        android:id="@+id/messageImg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:src="@mipmap/chat" />
</RelativeLayout>

