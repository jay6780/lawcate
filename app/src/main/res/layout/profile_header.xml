<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profilehome"
    android:visibility="visible"
    android:layout_width="match_parent"
    android:background="@color/white2"
    android:layout_height="110dp">

    <ImageView
        android:id="@+id/logout"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:paddingLeft="4dp"
        android:visibility="visible"
        android:paddingRight="4dp"
        android:src="@mipmap/newmenu" />

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/logout"
        android:layout_marginStart="30dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:src="@mipmap/scissors_2"
        android:visibility="visible" />


    <ImageView
        android:id="@+id/bell"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/messageImg"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:src="@mipmap/bell_new" />
    <TextView
        android:id="@+id/badge_count"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="11dp"
        android:visibility="visible"
        android:fontFamily="@font/inter"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:gravity="center"
        android:layout_toLeftOf="@+id/messageImg"
        android:background="@drawable/badge"/>

    <TextView
        android:id="@+id/profiletxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="@font/inter"
        android:text="Profile"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:visibility="visible" />


    <ImageView
        android:id="@+id/messageImg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:src="@mipmap/chat" />
</RelativeLayout>

