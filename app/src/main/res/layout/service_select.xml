<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <include layout="@layout/service_header"/>
    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/l1"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="60dp">

            <RadioButton
                android:id="@+id/corporate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Corporate"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="5dp"
                android:src="@mipmap/law" />
        </RelativeLayout>
        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_below="@+id/l1"
            android:layout_height="2dp"/>
        <RelativeLayout
            android:id="@+id/l2"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/view1"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="60dp">

            <RadioButton
                android:id="@+id/family"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Family"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="5dp"
                android:src="@mipmap/family" />
        </RelativeLayout>
        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_below="@+id/l2"
            android:layout_height="2dp"/>

        <RelativeLayout
            android:id="@+id/l3"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@+id/view2"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/criminal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Criminal"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="5dp"
                android:src="@mipmap/handcuffs" />
        </RelativeLayout>
        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_below="@+id/l3"
            android:layout_height="2dp"/>
        <RelativeLayout
            android:id="@+id/l4"
            android:layout_below="@+id/view3"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="60dp">

            <RadioButton
                android:id="@+id/immigration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Immigration"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="5dp"
                android:src="@mipmap/imigration" />
        </RelativeLayout>

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/l4"
            android:background="@color/black" />


        <RelativeLayout
            android:id="@+id/l5"
            android:layout_below="@+id/view4"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="60dp">

            <RadioButton
                android:id="@+id/property"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Property"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="5dp"
                android:src="@mipmap/property" />
        </RelativeLayout>

        <View
            android:id="@+id/view5"
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_below="@+id/l5"
            android:layout_height="2dp"/>

    </RelativeLayout>
    <include layout="@layout/savedfooter"/>
</LinearLayout>