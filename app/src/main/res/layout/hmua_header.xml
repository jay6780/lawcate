<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_top4">

    <ImageView
        android:id="@+id/gunting"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:src="@mipmap/scissors_white" />

    <TextView
        android:id="@+id/profiletxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gunting"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/inter"
        android:text="Hair and Makeup Artist"
        android:textColor="@color/white"
        android:textSize="18sp" />
    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="35dp"
        android:layout_toLeftOf="@+id/messageImg">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/bell"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:src="@mipmap/bell_new" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/badge_count"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="20dp"
        android:elevation="20dp"
        android:layout_toLeftOf="@+id/messageImg"
        android:background="@drawable/badge"
        android:fontFamily="@font/inter"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:visibility="visible" />


    <ImageView
        android:id="@+id/messageImg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:src="@mipmap/chat_white" />

    <include
        layout="@layout/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profiletxt"
        android:layout_marginTop="25dp" />
</RelativeLayout>